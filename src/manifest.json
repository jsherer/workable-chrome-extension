{
  "manifest_version": 2,

  "name": "Breezy.hr Blind",
  "description": "Toggle visibility of scorecards and comments of Breezy.hr to help combat group bias during hiring.",
  "version": "1.0.2",

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    }
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://breezy.hr/*"],
      "css": ["contentStyle.css"],
      "js": ["libs/jquery.min.js", "contentScript.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
